<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/transparent"
        android:layout_marginBottom="28dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/search_image"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:scaleType="fitCenter"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Title"
                      android:textColor="@color/primary"
                      android:fontFamily="@font/myfont"
                      android:textSize="14dp"
                      android:textStyle="bold"
                      android:layout_marginRight="16dp"
                      android:layout_marginLeft="20dp"
                      android:layout_toRightOf="@+id/search_image"
                      android:singleLine="true"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:id="@+id/search_title" android:layout_marginTop="32dp"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/movie_rating"
                      android:text="(2021)"
                      android:textSize="13dp"
                      android:layout_marginRight="6dp"
                      android:fontFamily="@font/myfont"
                      android:textColor="@color/white"
                      android:layout_alignParentRight="true"
                      android:id="@+id/movie_year" android:layout_marginTop="70dp"/>
            <com.chaek.android.RatingBar android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:layout_below="@id/search_title"
                                         android:layout_marginLeft="20dp"
                                         android:layout_gravity="center_vertical"
                                         app:rating_star_height="13dp"
                                         app:rating_star_width="13dp"
                                         app:rating_flag="FIVE"
                                         app:rating_star_empty_color="#7E7C7C"
                                         android:layout_toRightOf="@+id/search_image"
                                         app:rating_start_count="4"
                                         android:id="@+id/movie_rating"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/movie_rating"
                      android:text="7.9"
                      android:textSize="12dp"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="54dp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/myfont"
                      android:id="@+id/search_score"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="content"
                      android:fontFamily="@font/myfont"
                      android:id="@+id/search_content"
                      android:maxLines="3"
                      android:ellipsize="end"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:focusable="true"
                      android:textColor="@color/white"
                      android:focusableInTouchMode="true"
                      android:layout_below="@+id/movie_rating"
                      android:layout_toRightOf="@+id/search_image"
                      android:layout_marginLeft="20dp"
                      android:textSize="10dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginRight="16dp" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>
