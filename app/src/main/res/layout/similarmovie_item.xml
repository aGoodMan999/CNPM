<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:background="@drawable/backgound_card"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/detail_image_similarMovie"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitCenter"/>
        <TextView android:layout_width="36dp"
                  android:layout_height="28dp"
                  android:text="7.9"
                  android:textSize="12dp"
                  android:layout_marginTop="12dp"
                  android:layout_marginRight="12dp"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:layout_below="@+id/detail_image_similarMovie"
                  android:layout_marginLeft="8dp"
                  android:fontFamily="@font/myfont"
                  android:background="@drawable/similar_scores"
                  android:id="@+id/detail_score_similarMovie"
        />
    </FrameLayout>

</androidx.cardview.widget.CardView>