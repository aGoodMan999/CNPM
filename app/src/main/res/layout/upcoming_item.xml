<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/search_image_upcoming"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitCenter"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Title"
                      android:textColor="@color/primary"
                      android:fontFamily="@font/myfont"
                      android:textSize="14dp"
                      android:textStyle="bold"
                      android:layout_centerHorizontal="true"
                      android:singleLine="true"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:id="@+id/search_title_upcoming" android:layout_marginTop="7dp" android:layout_marginStart="7dp"
                      android:layout_marginEnd="7dp" android:layout_marginBottom="7dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/movie_rating_upcoming"
                      android:text="(2021)"
                      android:textSize="13dp"
                      android:textColor="@color/white"
                      android:fontFamily="@font/myfont"
                      android:id="@+id/movie_year_upcoming" android:layout_marginTop="7dp" android:layout_marginStart="6dp"
                      android:layout_marginEnd="5dp" android:layout_marginBottom="1dp"/>
            <com.chaek.android.RatingBar android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:layout_below="@id/search_title_upcoming"
                                         android:layout_marginLeft="5dp"
                                         android:layout_gravity="center_vertical"
                                         app:rating_star_height="13dp"
                                         app:rating_star_width="13dp"
                                         app:rating_flag="FIVE"
                                         android:layout_centerHorizontal="true"
                                         app:rating_star_empty_color="#7E7C7C"
                                         app:rating_start_count="4"
                                         android:id="@+id/movie_rating_upcoming"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:text="7.9"
                      android:textSize="12dp"
                      android:layout_marginTop="58dp"
                      android:layout_marginRight="8dp"
                      android:layout_alignParentRight="true"
                      android:layout_marginLeft="8dp"
                      android:fontFamily="@font/myfont"
                      android:id="@+id/search_score_upcoming"
            />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>